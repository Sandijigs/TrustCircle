{
  "name": "@trustcircle/contracts",
  "version": "0.1.0",
  "private": true,
  "description": "TrustCircle smart contracts",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "hardhat test test/**/*.test.ts --exclude test/integration/** --exclude test/security/**",
    "test:integration": "hardhat test test/integration/**/*.test.ts",
    "test:security": "hardhat test test/security/**/*.test.ts",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network celoSepolia",
    "deploy:alfajores": "hardhat run scripts/deploy.ts --network alfajores",
    "deploy:celo": "hardhat run scripts/deploy.ts --network celo",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "check-accounts": "hardhat run scripts/check-accounts.ts --network celoSepolia",
    "check-deployer": "hardhat run scripts/get-deployment-address.ts --network celoSepolia",
    "get-tokens": "hardhat run scripts/get-test-tokens.ts --network celoSepolia",
    "mint-tokens": "hardhat run scripts/mint-test-tokens.ts --network celoSepolia",
    "check-mock": "hardhat run scripts/check-mock-token.ts --network celoSepolia",
    "create-pools": "hardhat run scripts/create-pools.ts --network celoSepolia",
    "security:scan": "../../scripts/security-scan.sh",
    "security:status": "ts-node ../../scripts/security-status.ts",
    "emergency:pause": "ts-node ../../scripts/emergency-pause.ts",
    "lint": "solhint 'contracts/**/*.sol'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-ignition": "^0.15.16",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.16",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomicfoundation/hardhat-viem": "^2.0.6",
    "@nomicfoundation/ignition-core": "^0.15.15",
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/contracts-upgradeable": "^5.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.10.0",
    "chai": "^4.3.10",
    "dotenv": "^16.4.7",
    "eth-gas-reporter": "^0.2.27",
    "hardhat": "^2.22.17",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.6.0"
  }
}
